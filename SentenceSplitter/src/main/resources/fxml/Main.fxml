<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tools.sentencesplitter.controller.MainController">
   <center>
      <SplitPane dividerPositions="0.5" orientation="VERTICAL" BorderPane.alignment="CENTER">
        <items>
          <AnchorPane>
               <children>
                  <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <top>
                        <Label text="Source" BorderPane.alignment="TOP_LEFT" />
                     </top>
                     <center>
                        <TextArea fx:id="sourceArea" BorderPane.alignment="CENTER" />
                     </center>
                  </BorderPane>
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0">
               <children>
                  <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <top>
                        <Label text="Result" BorderPane.alignment="TOP_LEFT" />
                     </top>
                     <center>
                        <TextArea fx:id="resultArea" BorderPane.alignment="CENTER" />
                     </center>
                  </BorderPane>
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </center>
   <top>
      <FlowPane BorderPane.alignment="CENTER">
         <children>
            <Label text="Split character">
               <FlowPane.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </FlowPane.margin>
            </Label>
            <TextField fx:id="splitCharacterField" prefWidth="50.0" text=".">
               <FlowPane.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </FlowPane.margin>
            </TextField>
            <Label text="Interval line">
               <FlowPane.margin>
                  <Insets bottom="3.0" left="10.0" right="3.0" top="3.0" />
               </FlowPane.margin>
            </Label>
            <ChoiceBox fx:id="intervalLineBox">
               <FlowPane.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </FlowPane.margin>
            </ChoiceBox>
            <Button fx:id="splitButton" mnemonicParsing="false" onAction="#onSplit" text="Split">
               <FlowPane.margin>
                  <Insets bottom="3.0" left="10.0" right="3.0" top="3.0" />
               </FlowPane.margin>
            </Button>
         </children>
      </FlowPane>
   </top>
</BorderPane>
